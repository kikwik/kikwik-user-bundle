<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">
  <services>

    <service id="kikwik_user.event_subscriber.login_subscriber" class="Kikwik\UserBundle\EventSubscriber\LoginSubscriber">
      <argument type="service" id="doctrine.orm.entity_manager"/>
      <tag name="kernel.event_subscriber" event="security.interactive_login"/>
    </service>


    <service id="kikwik_user.command.create_user_command" class="Kikwik\UserBundle\Command\CreateUserCommand">
      <argument>%kikwik_user.user_class%</argument>
      <argument>%kikwik_user.user_identifier_field%</argument>
      <argument type="service" id="doctrine.orm.entity_manager"></argument>
      <argument type="service" id="security.password_encoder"></argument>
      <tag name="console.command" command="kikwik:user:create" />
    </service>

    <service id="kikwik_user.command.change_user_password_command" class="Kikwik\UserBundle\Command\ChangeUserPasswordCommand">
      <argument>%kikwik_user.user_class%</argument>
      <argument>%kikwik_user.user_identifier_field%</argument>
      <argument type="service" id="doctrine.orm.entity_manager"></argument>
      <argument type="service" id="security.password_encoder"></argument>
      <tag name="console.command" command="kikwik:user:change-password" />
    </service>

    <service id="kikwik_user.command.change_user_roles_command" class="Kikwik\UserBundle\Command\ChangeUserRolesCommand">
      <argument>%kikwik_user.user_class%</argument>
      <argument>%kikwik_user.user_identifier_field%</argument>
      <argument type="service" id="doctrine.orm.entity_manager"></argument>
      <tag name="console.command" command="kikwik:user:change-roles" />
    </service>

  </services>
</container>
{% extends 'base.html.twig' %}

{% block title %}{{ 'change_password.title'|trans({},'KikwikUserBundle') }}{% endblock %}

{% block body %}

    {{ form_start(form) }}
        <div class="card">
            <div class="card-header">
                <h3>{{ 'change_password.title'|trans({},'KikwikUserBundle') }}<br/>
                    <small>{{ app.user }}</small>
                </h3>
            </div>
            <div class="card-body">
                <p class="card-text">
                    {{ 'change_password.description'|trans({},'KikwikUserBundle')|raw }}
                </p>

                {{ form_widget(form) }}
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col">
                        <a href="{{ app.session.get('kikwik_user.password.referer') }}" class="btn btn-secondary">{{ 'change_password.back'|trans({},'KikwikUserBundle')|raw }}</a>
                    </div>
                    <div class="col text-right">
                        <button type="submit" class="btn btn-success" name="change-password-submit">{{ 'change_password.submit'|trans({},'KikwikUserBundle')|raw }}</button>
                    </div>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}